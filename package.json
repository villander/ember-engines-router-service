{
  "version": "0.3.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/villander/ember-engines-router-service"
  },
  "workspaces": [
    "addon",
    "test-app"
  ],
  "scripts": {
    "prepare": "cd addon && yarn build",
    "release": "release-it"
  },
  "devDependencies": {
    "release-it": "^14.13.1",
    "release-it-lerna-changelog": "^4.0.1",
    "release-it-yarn-workspaces": "^2.0.1"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "hooks": {
      "before:init": "cp README.md LICENSE.md addon/"
    },
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": false
      },
      "release-it-yarn-workspaces": {
        "workspaces": [
          "addon"
        ],
        "additionalManifests": {
          "dependencyUpdates": [
            "test-app/package.json"
          ],
          "versionUpdates": [
            "package.json",
            "test-app/package.json"
          ]
        }
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  },
  "volta": {
    "node": "14.19.2",
    "yarn": "1.22.18"
  }
}