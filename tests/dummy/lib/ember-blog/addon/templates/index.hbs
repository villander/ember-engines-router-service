<ul>
  <li><LinkTo @route="post" @model="1" class="routable-post-1-link">Go to post #1</LinkTo></li>
  <li>
    <LinkTo
      class="routable-post-1-link-jp"
      @route="post"
      @model="1"
      @query={{hash lang="Japanese"}}
    >
      Go to post #1 with Japanese as language
    </LinkTo>
  </li>
  <li>
    <button
      class="routable-post-1-link-ch"
      type="button"
      {{on "click" this.goToPostWithChinese}}
    >
      Go to post #1 with Chinese as language programmatically
    </button>
  </li>
</ul>